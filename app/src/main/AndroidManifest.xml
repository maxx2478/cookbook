<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manohar.cookbook">

    <application
        android:name=".utils.MasterClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookBook">
        <activity android:name=".views.NotesActivity"></activity>
        <activity
            android:name=".views.RecipeActivity"
            android:label="@string/title_activity_recipe"></activity>
        <activity android:name=".views.DetailActivity" />
        <activity android:name=".authentication.SignupActivity" />
        <activity android:name=".authentication.LoginActivity" />
        <activity android:name=".views.AddRecipe" />
        <activity android:name=".views.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MainActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>